<div class="row">
  <br>
  <br>
  <div class="col l6 offset-l4">
    <div class="card">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true, placeholder:"John Smith" %>
          <%= f.input :email, required: true, autofocus: true, placeholder:"user@domain.com" %>
          <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions btn-padding">
          <%= f.button :submit, "Sign up"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
